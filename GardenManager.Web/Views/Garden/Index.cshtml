@model GardenManager.Web.ViewModels.GardenViewModel

@{
    ViewBag.Title = "My Gardens";
}

<div class="row">
    <div id="breadcrumb" class="col-xs-12">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="active">@Html.ActionLink("Gardens", "Index", "Garden")</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-6">
        <div class="box ui-draggable ui-droppable">
            <div class="box-header">
                <div class="box-name">
                    <span class="fa fa-table"></span>
                    <span>My Gardens</span>
                </div>
            </div>
            <div class="box-content">
                <p>
                    @Html.ActionLink("Create New Garden", "Create")
                </p>
                <table class="table table-bordered table-hover table-heading">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Garden.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Garden.Beds)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Garden.Seasons)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Garden.Harvests)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Garden.Zone.Zone)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Gardens)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @((item.Beds == null || item.Beds.Count() == 0) ? @Html.ActionLink("Add", "Create", "Bed", new { gardenId = item.Id }, new { @class = "btn btn-info", @role = "button" }) : @Html.Raw(item.Beds.Count().ToString()))
                                </td>
                                <td>
                                    @(item.Seasons == null ? @Html.ActionLink("Add", "Create", "Season", new { @class = "btn btn-info", @role = "button" }) : @Html.ActionLink(item.Beds.Count().ToString(), "Index", "Season"))
                                </td>
                                <td>
                                    @(item.Harvests == null ? @Html.ActionLink("Add", "Create", "Harvest", new { @class = "btn btn-info", @role = "button" }) : @Html.ActionLink(item.Beds.Count().ToString(), "Index", "Harvest"))
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Zone.Zone)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
