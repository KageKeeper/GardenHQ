@model IEnumerable<GardenManager.Entities.Garden>

@{
    ViewBag.Title = "My Gardens";
}

<div class="row">
    <div id="breadcrumb" class="col-xs-12">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="active">@Html.ActionLink("Gardens", "Index", "Garden")</li>
        </ol>
    </div>
</div>
<h2>My Gardens</h2>

<p>
    @Html.ActionLink("Create New Garden", "Create")
</p>
<table class="table m-table table-bordered table-hover table-heading col-md-4">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Seasons)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Harvests)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zone.Zone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @(item.Beds == null ? @Html.ActionLink("Add", "Create", "Bed", null, new { @class = "btn btn-info", @role = "button" }) : @Html.ActionLink(item.Beds.Count().ToString(), "Index", "Bed"))
                </td>
                <td>
                    @(item.Seasons == null ? @Html.ActionLink("Add", "Create", "Season", new { @class = "btn btn-info", @role = "button" }) : @Html.ActionLink(item.Beds.Count().ToString(), "Index", "Season"))
                </td>
                <td>
                    @(item.Harvests == null ? @Html.ActionLink("Add", "Create", "Harvest", new { @class = "btn btn-info", @role = "button" }) : @Html.ActionLink(item.Beds.Count().ToString(), "Index", "Harvest"))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zone.Zone)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>

</table>