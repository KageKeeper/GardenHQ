</head>
<body>
    <!-- start Header -->
    @{ Html.RenderPartial("_ModalPartial");  }
    <header class="navbar">
        <div class="container-fluid expanded-panel">
            <div class="row">
                <div id="logo" class="col-xs-12 col-sm-2">
                    @Html.ActionLink("Garden HQ", "Index", "Home", new { area = "" }, null)
                </div>
                <div id="top-panel" class="col-xs-12 col-sm-10">
                    <div class="row">
                        <div class="col-xs-8 col-sm-4">
                            <a href="#" class="show-sidebar">
                                <span class="fa fa-bars"></span>
                            </a>
                        </div>
                        <div class="col-xs-4 col-sm-8">
                            <ul class="nav navbar-nav pull-right panel-menu">
                                <li>@Html.Partial("_LoginPartial")</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- end Header -->
    <!-- start Container -->
    <div id="main" class="container-fluid" style="min-height: 906px;">
        <div class="row">
            <div class="notification-message notification-message-success"></div>
            @Html.Partial("_MainNavigationPartial", new _NavigationViewModel(Model.Gardens))
            <div id="content">
                <div id="ajax-content">
                    @RenderBody()
                    <hr />
                    <footer>
                        <p>&copy; @DateTime.Now.Year - Garden HQ</p>
                    </footer>
                </div>
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
